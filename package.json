{
  "name": "@rtcio/monorepo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "A P2P connection library aimed to make RTCPeerConnections easier to use",
  "packageManager": "pnpm@10.15.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/dbidwell94/rtc.io"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "tsc --noEmit && vitest run",
    "doc": "typedoc",
    "build": "turbo build check-types",
    "dev": "turbo watch dev",
    "clean": "rm -rf packages/*/dist packages/*/tsconfig.tsbuildinfo",
    "ci:publish": "pnpm build && pnpm publish -r --dry-run"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.35.0",
    "@roamhq/wrtc": "^0.9.0",
    "@types/node": "^24.3.1",
    "eslint": "^9.35.0",
    "turbo": "^2.5.6",
    "typedoc": "^0.28.12",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "debug": "4.4.0"
  }
}
